{
    "ConnectionStrings": {
        "DefaultConnection": "Host=localhost;Port=5432;Database=MotoRent;Username=postgres;Password={DB_PASSWORD}"
    },
    "Jwt": {
        "Key": "{JWT_SECRET_KEY}",
        "Issuer": "MotoRent",
        "Audience": "MotoRentUsers",
        "ExpireDays": 7
    },
    "StorageSettings": {
        "StorageType": "MinIO",
        "LocalStoragePath": "Uploads",
        "MinIO": {
            "Endpoint": "{MINIO_ENDPOINT}",
            "AccessKey": "{MINIO_ACCESS_KEY}",
            "SecretKey": "{MINIO_SECRET_KEY}",
            "BucketName": "motorent",
            "UseSSL": false
        }
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*"
}